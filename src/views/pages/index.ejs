<!-- section apropos -->
<section id="about">
  <div class="about-content">
    <h2><%= data.siteContent.about.title %></h2>
    <p><%= data.siteContent.about.description %></p>
    <div class="values">
      <% data.siteContent.about.values.forEach(value => { %>
        <div class="value-item">
          <img src="images/<%= value.image %>.webp" alt="<%= value.imageDescription %>">
          <h3><%= value.title %></h3>
          <p><%= value.description %></p>
        </div>
      <% }) %>
    </div>
  </div>
</section>



<!-- section des services dans un carousel -->
<section id="services" class="carousel-slide">
  <div class="services-content">
    <h2><%= data.siteContent.services.title %></h2>
    <p><%= data.siteContent.services.description %></p>
    <div class="carousel">
      <button class="btn" id="prev">&#10096;</button>
      <button class="btn" id="next">&#10097;</button>
      <button class="btn" id="pause">Pause</button>
      <ul>
        <% data.siteContent.services.items.forEach((service, index) => { %>
          <li class="slide <%= index === 0 ? 'active' : '' %>">
            <img src="/images/<%= service.image %>.webp" alt="<%= service.title %>">
            <div class="info-card">
              <h3><%= service.title %></h3>
              <p><%= service.description %></p>
            </div>
          </li>
        <% }) %>
      </ul>
      <div class="indicators">
        <% data.siteContent.services.items.forEach((service, index) => { %>
          <span class="indicator <%= index === 0 ? 'active' : '' %>" data-slide="<%= index %>"></span>
        <% }) %>
      </div>
    </div>
  </div>
  <a href="#contact" class="cta-button">Agissez Maintenant !</a>
</section>





